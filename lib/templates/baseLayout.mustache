<!DOCTYPE html>
<html lang="en">

<head>
    <title>Swagger Accuracy Report:{{package}}({{ apiVersion }})</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="Coverage, Swagger, Report, Tools">
    <meta name="description" content="Swagger Accuracy Report">
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <style>
        :root {
            --report-bg-green: #91cc74;
            --report-bg-red: #ee6666;
            --report-bg-yellow: #fac858;
            --report-bg-blue: #e6e9f0;
            --report-color-green: #218838;
            --report-color-yellow: #e0a800;
            --report-color-red: #c82333;
            --report-base-color: #333;
            --border-color: #b7b7b7;
            --report-color-black: #000;
            --report-color-white: #fff;
            --title-small: #707070;
            --link-color: #1453ff;
            --link-hover-color: #7096ff;
            --content-hover-color: #f5f5f5;
            --line-color: #43425a;
        }
        .report-content {
            margin: 10px auto 40px;
            min-width: 900px;
            max-width: 1500px;
            color: var(--report-base-color);
            font-family: "Helvetica Neue", Helvetica, Arial, "Hiragino Sans GB", "Microsoft YaHei UI", sans-serif;
            box-sizing: border-box;
        }
        h2 {
            margin-bottom: 14px;
        }
        a {
            text-decoration: none;
            position: relative;
            display: inline-block;
            color: var(--link-color);
        }
        a span {
            margin: auto;
            display: inline-block;
            position: absolute;
            bottom: -4px;
            left: 0;
            right: 0;
            width: 0px;
            height: 2px;
            background: var(--link-hover-color);
            ;
            transition: .1s;
            border-radius: 50px;
        }
        a:hover {
            color: var(--link-hover-color);
        }
        a:hover span {
            width: 100%;
        }
        .disableTr {
            display: none;
        }
        .table-body {
            overflow-y: auto;
            max-height: 790px;
            border-bottom: 1px solid var(--border-color);
        }
        .table-body::-webkit-scrollbar {
            display: none;
            /* Chrome Safari */
            -ms-overflow-style: none;
            /* IE 10+ */
            scrollbar-width: none;
            /* Firefox */
        }
        table {
            width: 100%;
            table-layout: auto;
            border-collapse: separate;
            border-spacing: 0;
            text-align: left;
            border-left: 1px solid var(--border-color);
        }
        table tr:hover>td {
            background-color: var(--content-hover-color);
        }
        th,
        td {
            box-sizing: border-box;
            text-align: center;
            padding: 16px;
            height: 55px;
            line-height: 22px;
        }
        table>thead>tr>th {
            font-weight: 500;
            font-size: 18px;
            background-color: var(--report-bg-blue);
            color: var(--report-base-color);
            font-weight: bold;
            border-top: 1px solid var(--border-color);
            border-right: 1px solid var(--border-color);
            border-bottom: 1px solid var(--border-color);
        }
        table>tbody>tr>td {
            text-align: left;
            font-size: 16px;
            transition: background .3s;
            border-top: 1px solid var(--border-color);
            border-right: 1px solid var(--border-color);
        }
        table>tbody>tr:first-child>td {
            border-top: none;
        }
        .details {
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .details .limitText {
            width: 92%;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
        .details .btnMore {
            background-color: transparent;
            width: 8%;
            display: inline-flex;
            justify-content: center;
            align-items: center;
            border: none;
            outline: none;
            position: relative;
            color: var(--link-color);
            font-size: 16px;
        }
        .details .btnMore span {
            padding-right: 30px;
        }
        .details .btnMore::after {
            content: "";
            margin: auto;
            display: inline-block;
            position: absolute;
            bottom: -4px;
            left: 0;
            right: 0;
            width: 0px;
            height: 2px;
            background: var(--link-hover-color);
            transition: .1s;
            border-radius: 50px;
        }
        .details .btnMore:hover {
            color: var(--link-hover-color);
        }
        .details .btnMore:hover:after {
            width: 100%;
        }
        .details .btnMore .arrow {
            width: 8px;
            height: 8px;
            color: var(--link-color);
            border-left: 2px solid var(--link-color);
            border-bottom: 2px solid var(--link-color);
            border-radius: 10%;
            display: inline-block;
            transform: rotate(315deg);
            transform-origin: 50% 50%;
            transition: all .2s ease-in;
            position: absolute;
            right: 20px;
            top: 3px;
        }
        .details .btnMore:hover .arrow {
            color: var(--link-hover-color);
            border-color: var(--link-hover-color);
        }
        .testFailed .details .btnMore .arrow {
            right: 10px;
        }
        .details .btnMore .collapse {
            top: 6px;
            transform: rotate(225deg);
        }
        .summary {
            margin: 40px 0 50px 0;
        }
        .summary.scroll {
            margin: 20px 0 20px 0;
        }
        .summary .title {
            margin: 0px 0 10px 0px;
            font-size: 2.5em;
        }
        .summary .title::after {
            content: "";
            display: block;
            width: 100%;
            height: 2px;
            margin-top: 4px;
            background-color: var(--line-color);
        }
        .summary .timeStamp {
            font-size: 16px;
            margin: 2px 0 0 0;
            color: var(--title-small);
        }
        .coverage {
            margin-bottom: 40px;
        }
        .coverage table td:nth-child(-n+3) {
            text-align: center;
        }
        .coverage table .file {
            word-wrap: break-word;
            word-break: break-all;
        }
        .notTested {
            margin-bottom: 40px;
        }
        .notTested table tbody tr td:nth-child(2) {
            word-break: break-all;
        }
        .notTested .operationTag {
            text-align: left;
        }
        .notTested .operationTag .tag {
            color: var(--report-base-colo);
            background-color: var(--report-bg-blue);
            border: 1px solid var(--report-bg-blue);
            display: inline-block;
            height: 32px;
            padding: 0 10px;
            margin: 4px 2px;
            line-height: 30px;
            font-size: 14px;
            border-radius: 4px;
            box-sizing: border-box;
            white-space: nowrap;
        }
        .notTested table,
        .testFailed table,
        .innerTable table {
            table-layout: fixed;
        }
        .testFailed table tbody tr td:nth-child(-n+2) {
            word-break: break-all;
        }
        .testFailed table .wrapper-td {
            background-color: var(--content-hover-color);
            padding: 0px;
        }
        .innerTable table {
            border: none;
            border-left: 1px solid var(--border-color);
        }
        .innerTable table th,
        .innerTable table td {
            border: none;
            text-align: left;
        }
        .innerTable table th {
            background-color: var(--content-hover-color);
            color: #000000d9;
            position: relative;
            padding: 16px;
            line-height: 22px;
            height: 55px;
            font-size: 18px;
            box-sizing: border-box;
            border-bottom: 1px solid var(--border-color);
        }
        .innerTable table tr:not(:last-child)>td {
            border-bottom: 1px solid var(--border-color);
            transition: background .3s;
            font-size: 16px;
            word-break: break-all;
        }
        .innerTable {
            margin: 0px 0px 0px 40px;
        }
        .innerTable table tr {
            background-color: var(--report-color-white);
        }
    </style>
</head>

<body>
    <div class="report-content">
        <section class="summary">
            <h1 class="title">Swagger Accuracy Report:{{package}}({{apiVersion}})</h1>
            <!-- TODO: localize the UTC date via JS -->
            <h3 class="timeStamp">Generated {{ formatGeneratedDate }}.</h3>
        </section>

        <section class="coverage">
            <h2>Test Coverage Details</h2>
            <article>
                <div class="table-header">
                    <table summary="Test Coverage Details" cellspacing="0" cellpadding="0">
                        <colgroup>
                            <col style="width: 15%;" />
                            <col style="width: 20%;" />
                            <col style="width: 20%;" />
                            <col style="width: 45%;" />
                        </colgroup>
                        <thead>
                            <tr>
                                <th style="background-color: var(--report-bg-green);">Operations Tested</th>
                                <th style="background-color: var(--report-bg-yellow)">
                                    Operations Missing Test
                                </th>
                                <th style="background-color: var(--report-bg-red);">Operations Failed</th>
                                <th style="background-color: var(--report-bg-blue);">Swagger File</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <div class="table-body">
                    <table summary="Test Coverage Details" cellspacing="0" cellpadding="0">
                        <colgroup>
                            <col style="width: 15%;" />
                            <col style="width: 20%;" />
                            <col style="width: 20%;" />
                            <col style="width: 45%;" />
                        </colgroup>
                        <tbody>
                            {{#coverageResults}}
                            <tr>
                                <td style="color: var(--report-color-green)">{{coveredOperaions}}</td>
                                <td style="color: var(--report-color-yellow)">{{unCoveredOperations}}</td>
                                <td style="color: var(--report-color-red)">{{validationFailOperations}}</td>
                                <td>
                                    <div class="file">
                                        {{spec}}
                                    </div>
                                </td>
                            </tr>
                            {{/coverageResults}}
                        </tbody>
                    </table>
                </div>
            </article>
        </section>

        <section class="notTested">
            <h2 class="title">Operations Not Tested</h2>
            <article>
                <div class="table-header">
                    <table summary="Operations Not Tested" cellspacing="0" cellpadding="0">
                        <colgroup>
                            <col style="width: 20%" />
                            <col style="width: 80%" />
                        </colgroup>
                        <thead>
                            <tr>
                                <th>SwaggerFile</th>
                                <th>OperationId</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <div class="table-body">
                    <table summary="Operations Not Tested" cellspacing="0" cellpadding="0">
                        <colgroup>
                            <col style="width: 20%" />
                            <col style="width: 80%" />
                        </colgroup>
                        {{#coverageResultsForRendering}}
                        <tbody>
                            <tr>
                                <td>
                                    <a href="{{spec}}">{{specLinkLabel}}<span></span></a>
                                </td>
                                <td>
                                    <div class="details showOperationTag">
                                        <div class="limitText"></div>
                                        <button class="btnMore"><span>More</span><i class="arrow collapse"></i></button>
                                    </div>
                                </td>
                            </tr>
                            <tr class="disableTr">
                                <td colspan="2">
                                    <div class="operationTag">
                                        {{#unCoveredOperationsList}}
                                        <span class="tag">{{operationId}}</span>
                                        {{/unCoveredOperationsList}}
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                        {{/coverageResultsForRendering}}
                    </table>
                </div>
            </article>
        </section>

        <section class="testFailed">
            <h2 class="title">Operations Test Failed</h2>
            <article>
                <div class="table-header">
                    <table summary="Operations Test Failed" cellspacing="0" cellpadding="0">
                        <colgroup>
                            <col style="width: 15%" />
                            <col style="width: 20%" />
                            <col style="width: 65%" />
                        </colgroup>
                        <thead>
                            <th>OperationId</th>
                            <th>PayloadFilePath</th>
                            <th>Errors</th>
                        </thead>
                    </table>
                </div>
                <div class="table-body">
                    <table summary="Operations Test Failed" cellspacing="0" cellpadding="0">
                        <colgroup>
                            <col style="width: 15%" />
                            <col style="width: 20%" />
                            <col style="width: 65%" />
                        </colgroup>
                        {{#getGeneralErrors}}
                        <tbody>
                            <tr>
                                <td>{{operationInfo.operationId}}</td>
                                <td>
                                    <a href="{{payloadFilePath}}">
                                        {{payloadFileLinkLabel}}
                                        <span></span>
                                    </a>
                                </td>
                                <td>
                                    <div class="details showTestFailed">
                                        <div class="limitText"></div>
                                        <button class="btnMore"><span>More</span><i class="arrow collapse"></i></button>
                                    </div>
                                </td>
                            </tr>
                            <tr class="disableTr">
                                <td colspan="3" class="wrapper-td">
                                    <div class="innerTable">
                                        <table>
                                            <thead>
                                                <tr>
                                                    <th>errorCode</th>
                                                    <th>message</th>
                                                    <th>jsonPathsInPayload</th>
                                                    <th>schemaPath</th>
                                                    <th>params</th>
                                                    <th>source</th>
                                                </tr>
                                            </thead>
                                            <colgroup>
                                                <col style="width: 17%" />
                                                <col style="width: 17%" />
                                                <col style="width: 18%" />
                                                <col style="width: 17%" />
                                                <col style="width: 15%" />
                                                <col style="width: 16%" />
                                            </colgroup>
                                            <tbody>
                                                {{#errors}}
                                                <tr>
                                                    <td>{{code}}</td>
                                                    <td>{{message}}</td>
                                                    <td>{{jsonPathsInPayload}}</td>
                                                    <td>{{schemaPath}}</td>
                                                    <td>{{params}}</td>
                                                    <td>{{source}}</td>
                                                </tr>
                                                {{/errors}}
                                            </tbody>
                                        </table>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                        {{/getGeneralErrors}}
                    </table>
                </div>
            </article>
        </section>
    </div>
</body>

</html>
<script>
    $(document).ready(() => {
        console.log('Hello AZSDK. Document.Ready available here.');
        renderOperationTag();
        showTestFailed();
        addEachClick();
    });
    function addEachClick() {
        $('div.showOperationTag').each(function (index) {
            $(this).click(function (event) {
                var disableTr = $(this).parent().parent().next();
                disableTr.toggle();
                var arrow = $(this).find(".arrow")[0]
                $(arrow).toggleClass("collapse");
            });
        });
        $('div.showTestFailed').each(function (index) {
            $(this).click(function (event) {
                var disableTr = $(this).parent().parent().next();
                disableTr.toggle();
                var arrow = $(this).find(".arrow")[0]
                $(arrow).toggleClass("collapse");
            });
        });
    }
    function renderOperationTag() {
        $('div.showOperationTag > .limitText').each(function (index) {
            var textElement = $(this).parent().parent().parent().next().find('.tag');
            var showOperationTagClickMsg = '';
            textElement.each(function (index, e) {
                showOperationTagClickMsg += $(e).html().trim() + ', ';
            });
            var result = "(" + textElement.length + ") " + showOperationTagClickMsg
            $(this).text(result)
        })
    }
    function showTestFailed() {
        $('div.showTestFailed > .limitText').each(function (index) {
            var textElement = $(this).parent().parent().parent().next().children().find('td');
            var showOperationsTestFailedMsg = ''
            textElement.each(function (index, e) {
                showOperationsTestFailedMsg += $(e).html().trim() + ', ';
            });
            var trElement = $(this).parent().parent().parent().next().children().find('tr');
            var result = "(" + (trElement.length - 1) + ") " + showOperationsTestFailedMsg
            $(this).text(result)
        })
    }
</script>